{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "app/javascript",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": ["**/*.spec.ts", "node_modules", "public", "vendor"],
  "compileOnSave": false
}
