source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby '2.6.0'

gem 'rails', '5.2.2'

gem 'pg'
gem 'puma'

gem 'bootsnap', require: false
gem 'coffee-rails'
gem 'devise'
gem 'jbuilder'
gem 'sass-rails'
gem 'stripe'
gem 'uglifier'
gem 'webpacker'

group :development do
  gem 'listen'
  gem 'spring'
  gem 'spring-watcher-listen'
  gem 'web-console'
end

group :development, :test do
  gem 'dotenv-rails'
  gem 'pry-rails'
  gem 'rspec-rails'
  gem 'rubocop'
end

group :test do
  gem 'capybara'
  gem 'chromedriver-helper'
  gem 'selenium-webdriver'
  gem 'webmock'
end
